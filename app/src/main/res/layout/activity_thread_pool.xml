<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/app_toolbar"/>

        <TextView
            android:id="@+id/tv_info1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="线程一: 0"
            android:textColor="@color/font_black_2"/>

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:progressDrawable="@drawable/progressbar_selector"/>

        <TextView
            android:id="@+id/tv_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="线程二: 0"
            android:textColor="@color/font_black_2"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:progressDrawable="@drawable/progressbar_selector"/>

        <TextView
            android:id="@+id/tv_info3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="线程三: 0"
            android:textColor="@color/font_black_2"/>

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:progressDrawable="@drawable/progressbar_selector"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start1"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="启动线程一"/>

            <TextView
                android:id="@+id/tv_start2"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="启动线程二"/>

            <TextView
                android:id="@+id/tv_start3"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="启动线程三"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel1"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="停止线程一"/>

            <TextView
                android:id="@+id/tv_cancel2"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="停止线程二"/>

            <TextView
                android:id="@+id/tv_cancel3"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="停止线程三"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox1"
            style="@style/StyleCheckBoxLeftIcon"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:text="线程一"/>

        <CheckBox
            android:id="@+id/checkBox2"
            style="@style/StyleCheckBoxLeftIcon"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:text="线程二"/>

        <CheckBox
            android:id="@+id/checkBox3"
            style="@style/StyleCheckBoxLeftIcon"
            android:layout_marginLeft="15dp"
            android:checked="true"
            android:text="线程三"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_start"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="启动选择的线程"/>

            <TextView
                android:id="@+id/tv_cancel"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="停止选择的线程"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shut_down"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="shutdown()"/>

            <TextView
                android:id="@+id/tv_shut_down_now"
                style="@style/TvButtonStyle"
                android:layout_weight="1"
                android:text="shutdownNow()"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="当前线程池类型: newCachedThreadPool()"
            android:textColor="@color/font_black_2"/>

    </LinearLayout>
</ScrollView>