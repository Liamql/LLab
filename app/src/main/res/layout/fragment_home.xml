<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/indigo">

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/StyleUIMainTitleTV"
                android:text="线程、注解、反射"
                android:textColor="@color/purple"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_ui_main_item_height"
                android:layout_marginBottom="@dimen/dimen_ui_main_item_margin_top"
                android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
                android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_multi_thread"
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@color/purple"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_multi_thread"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="多线程"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/purple"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_thread"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="线程"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/purple"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_reflection"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="反射"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/purple"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_thread_pool"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="线程池"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/purple"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_annotation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="注解"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/StyleUIMainTitleTV"
                android:layout_marginTop="@dimen/dimen_ui_main_item_margin_top"
                android:text="Service、remote、AIDI"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_ui_main_item_height"
                android:layout_marginBottom="@dimen/dimen_ui_main_item_margin_top"
                android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
                android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/grey"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_content_send"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Service"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_service"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Service基础"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_aidl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="AIDL"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:orientation="horizontal">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/grey"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/StyleUIMainTitleTV"
                android:text="IPC"
                android:textColor="@color/green"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_ui_main_item_height"
                android:layout_marginBottom="@dimen/dimen_ui_main_item_margin_top"
                android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
                android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
                android:orientation="horizontal">

                <LinearLayout
