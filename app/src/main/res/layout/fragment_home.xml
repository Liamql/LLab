                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_hardware_computer"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Handler"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_messenger"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Messenger"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/StyleUIMainTitleTV"
                android:text="自定义View"
                android:textColor="@color/blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_ui_main_item_height"
                android:layout_marginBottom="@dimen/dimen_ui_main_item_margin_top"
                android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
                android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_shape_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_my_android"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ShapeView"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/blue"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_MarqueeView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="MarqueeView"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/blue"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_CircleTextView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="CircleTextView"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/blue"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_ShareView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="ShareView"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/blue"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/StyleUIMainTitleTV"
                android:text="网络操作"
                android:textColor="@color/green"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_ui_main_item_height"
                android:layout_marginBottom="@dimen/dimen_ui_main_item_margin_top"
                android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
                android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_okhttp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/green"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_hardware_computer"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="OkHttp3"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_retrofit"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Retrofit"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_ui_main_item_half_child_margin"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dimen_ui_main_item_child_margin"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/StyleUIMainTitleTV"
                android:text="图片"
                android:textColor="@color/orange"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_ui_main_item_height"
                android:layout_marginBottom="@dimen/dimen_ui_main_item_margin_top"
                android:layout_marginLeft="@dimen/dimen_ui_main_item_margin"
                android:layout_marginRight="@dimen/dimen_ui_main_item_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@color/orange"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_image_photo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Glide"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dimen_ui_main_item_half_child_margin"
